<div class="container">
  <div class="row mt-5 mb-4">
    <div class="col-lg-4">
      <h3 class="table-active"><%= @user.name %>さんのユーザー詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-7">
      <table class="admin_show_customer">
        <tr class="active">
          <th>ユーザーID</th>
          <td><%= @user.id %></td>
        </tr>

        <tr>
          <th>名前</th>
          <td><%= @user.name %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>

        <tr>
          <th>会員ステータス</th>
          <td><%= @user.is_deleted? ? "退会" : "有効" %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
        <div class="col-lg-2 my-auto">
          <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-info" %>
        </div>
    </div>
</div>