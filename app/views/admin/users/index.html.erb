<div class="text-center">
  <div class='container mt-5 px-5 px-sm-0'>
    <h1>会員一覧</h1>
    <table class='table text-light table-hover table-inverse mt-5'>
      <thead>
        <tr>
          <th>ユーザーID</th>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= user.id %>
          </td>
          <td>
            <%= link_to admin_user_path(user.id) do %>
            <%= user.name %>
            <% end %>
          </td>
          <td>
            <%= user.email %>
          </td>
          <td>
            <%= user.is_deleted? ? "退会" : "有効" %>
          </td>
        <% end %>
        </tr>
      </tbody>
    </table>
  <%#= paginate @users %>
  </div>
</div>
