<div class="container p-4">
  <div class="row">
    <div class="col-12 mt-4">
       <h3><strong><%= @user.name %>さんのユーザー情報編集</strong></h3>
      </div>
    </div>


      <div class="row mt-5">
      <%= form_with model: @user, url: admin_user_path do |f| %>
      <div class="form-group row">
        <div class="col-4"><strong>ユーザーID</strong></div>
        <div class="col-8"><%= @user.id %></div>
      </div>

      <div class="form-group row">
        <div class="col-4"><strong>氏名</strong></div>
        <div class="col-4"><%= f.text_field :name, autofocus: true, class: "form-control" %></div>
      </div>

      <div class="form-group row">
        <div class="col-4"><strong>メールアドレス</strong></div>
        <div class="col-8"><%= f.email_field :email, class: "form-control" %></div>
      </div>

      <div class="form-group row">
        <div class="col-4"><strong>ユーザーステータス</strong></div>
        <div class="col-8">
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, "有効" %>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, "退会" %>
        </div>
      </div>

      <div class="row">
        <div class="col-4"></div>
        <div class="col-8"><%= f.submit "編集内容を保存", class: 'btn btn-success' %></div>
      </dvi>

    <% end %>
  </div>
</div>