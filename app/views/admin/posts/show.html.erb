<div class="card text-dark mt-4 mb-4 mx-auto" style="width: 35rem;">
  <div class="card card-img-top">
  <% if @post.image.attached? %>
      <%= image_tag @post.image %>
    <% else %>
      <%= image_tag "no_image", size: "100x100" %>
  <% end %>
  <svg class="card-img-top" width="100%" height="400"></svg>
    <div class="card-img-overlay">
      <div class="float-left ml-2">
      <button type="button" class="btn btn-light" disabled>
        <%= @post.genre.name %>
      </button>
      </div>
    </div>
  </div>
  <div class="card-header">
    <button type="button" class="btn btn-outline-danger btn-sm">
      <%= link_to "投稿の削除", admin_post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    </button>
    <p><%= @post.title %></p>
    <p><%= @post.caption %></p>
  </div>
  <div class="card-body">
    <p class="card-text d-flex flex-wrap">
      <% @post.comments.each do |comment| %>
      <div class="col-12 clearfix">
        <div class="comment-box"><%= comment.comment %>
          <div class="float-right">
            <small class="text-muted">
            by<%= comment.user.name %>
            <%= comment.created_at.strftime('%Y/%m/%d') %>
            </small>
            <button type="button" class="btn btn-outline-danger btn-sm">
              <%= link_to "コメントの削除", admin_comment_path(comment), method: :delete %>
            </button>
          </div>
        </div>
      </div>
      <% end %>
    </p>
  </div>
</div>

