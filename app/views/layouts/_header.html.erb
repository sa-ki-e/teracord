<header>
  <% if user_signed_in? %>
    <p class="active"><%= current_user.name %>さん、teracordへようこそ！</p>
    <li>
      <%= link_to "ユーザーログアウト", destroy_user_session_path, method: :delete %>
    </li>
    <li>
      <%= link_to "新規投稿", new_post_path %>
    </li>
    <li>
      <%= link_to "投稿一覧", posts_path %>
    </li>
    <li>
      <%= link_to "マイページ", user_path(current_user.id) %>
    </li>
  <% elsif admin_signed_in? %>
    <li>
      <%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete %>
    </li>
    <li>
      <%= link_to "ユーザー一覧", admin_users_path %>
    </li>
    <li>
      <%= link_to "投稿一覧", admin_posts_path %>
    </li>
  <% else %>
    <li>
      <%= link_to "ユーザー新規登録", new_user_registration_path %>
    </li>
    <li>
      <%= link_to "ユーザーログイン", new_user_session_path %>
    </li>
  <% end %>
</header>